@using System.Data;
<!DOCTYPE html>
<html lang="ru">
<head>
  <title>Замечания</title>
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
</head>
<style>
    .yt-card {
    margin: 0 0 10px;
    border: 0;
    background: #fff;
    box-shadow: 0 1px 2px rgba(0,0,0,.1);
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
.branded-page-box, .branded-page-box-padding {
    padding: 15px;
}
body, input, button, textarea, select {
    font-family: "YouTube Noto",Roboto,arial,sans-serif;
    font-size: 13px;
}
body {
    word-wrap: break-word;
    margin: 0;
    padding: 0;
    font: 12px "YouTube Noto",Roboto,arial,sans-serif;
}

.comment-thread-renderer {
    margin: 0 10px 30px 0;
    line-height: 1.3em;
}
.comment-renderer {
    overflow: hidden;
    position: relative;
    padding-right: 20px;
}

.comment-renderer-content {
    overflow: hidden;
    min-height: 48px;
    margin-left: 60px;
}

.comment-thread-renderer {
    margin: 0 10px 30px 0;
    line-height: 1.3em;
}

.comment-author-text {
    color: #128ee9;
    font-weight: 700;
    text-decoration: none;
    word-break: break-all;
}

.comment-renderer-time {
    color: #767676;
    font-size: 11px;
    margin-left: 6px;
}
.comment-renderer-text {
    margin: 3px 0 8px;
}
.comment-renderer-text-content {
    overflow: hidden;
    /*white-space: pre-wrap;*/
    word-wrap: break-word;
    margin-bottom: 8px;
}
.yt-thumb-48 {
    width: 48px;
}
.yt-thumb-square {
    padding-bottom: 100%;
}

.yt-thumb-clip {
    position: absolute;
    _position: static;
    /*
    bottom: -100px;
    top: -100px;
    left: -100px;
    right: -100px;
    */
    text-align: center;
    white-space: nowrap;
    word-break: normal;
}

.comment-simplebox-renderer {
    padding: 0 0 20px;
    margin-bottom: 20px;
    border-bottom: 1px solid #e2e2e2;
}
.comment-simplebox-text {
    min-height: inherit;
    overflow: hidden;
    white-space: pre-wrap;
}
.comment-simplebox-frame {
    border: 1px solid #d5d5d5;
    border-radius: 2px;
    box-shadow: inset 0 0 1px rgba(0,0,0,.05);
    margin-left: 11px;
    margin-bottom: 8px;
    padding: 10px;
    min-height: 28px;
}

.comment-simplebox {
    display: block;
}

.comment-simplebox-buttons {
    margin-left: auto;
}

.yt-uix-button {
    display: inline-block;
    height: 28px;
    border: solid 1px transparent;
    padding: 0 10px;
    outline: 0;
    font-weight: 500;
    font-size: 11px;
    text-decoration: none;
    white-space: nowrap;
    word-wrap: normal;
    line-height: normal;
    vertical-align: middle;
    cursor: pointer;
    *overflow: visible;
    border-radius: 2px;
    box-shadow: 0 1px 0 rgba(0,0,0,0.05);
}

.comment-simplebox-controls {
    display: -moz-flexbox;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: row;
    flex-direction: row;
    -ms-flex-wrap: wrap;
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap;
    -webkit-align-items: flex-end;
    align-items: flex-end;
}
.watch-title-container {
    width: 75%;
}
h1 {
    font-size: 20px;
}
</style>   
<body>

    <!--http://127.0.0.1:5000/Docfiles/comments?ag_id=7759&ag_type=agr-->
    
    </form> 
    <div  class="branded-page-box yt-card">
    <div class="comment-simplebox-renderer yt-uix-servicelink">
    <h1 class="watch-title-container">
    <span  class="watch-title">
        @(ViewBag.info)
    </span>    
    </h1>
        <form action="/Docfiles/comments">
        <div class="comment-simplebox">
                <div class="comment-simplebox-frame">
                    <!--<div name="cm_message" class="comment-simplebox-text" role="textbox" aria-multiline="true" contenteditable="plaintext-only" data-placeholder="Оставьте комментарий">-->
                     <textarea class="comment-simplebox-text" style="border:0px; width:100%;height:30px"  name="cm_message"></textarea>
                    </div>
                    <div class="comment-simplebox-controls">
                    <div class="comment-simplebox-buttons">
                        <span>Статус:</span>

                        <select name="cm_status">
                            <option selected value="Открыто">Открыто</option>
                            <option value="Закрыто">Закрыто</option>
                        </select>

                        <input type="hidden" name="ag_id" value="@(ViewBag.ag_id)" hidden="hidden"/>
                        <input type="hidden" name="ag_type" value="@(ViewBag.ag_type)" hidden="hidden"/>
    
                        <button class="yt-uix-button" type="submit" aria-label="Оставить комментарий">Оставить комментарий</button>
                    </div>
                    </div>
                </div>
        </div>
        </form>    

    @{
        foreach (DataRow rw in ViewBag.rows)
        {
            
           
           
            <section class="comment-thread-renderer  vve-check-visible vve-check-hidden" >
                <div class="comment-renderer   vve-check-visible vve-check-hidden" >
                    <span class="yt-thumb-48 yt-thumb-clip">
                            <span class="yt-thumb-square">
                                <image height="48" src="/Docfiles/getphoto?audtuser=@(rw["audtuser"].ToString())"/>                
                            </span>
                            </span>
                    <div class="comment-renderer-content">
                        <div class="comment-renderer-header">
                            <span class="comment-author-text">
                                @(rw["fio"].ToString())
                            </span>
                            <span class="comment-renderer-time" tabindex="0">
                                @(((DateTime)rw["audtdate"]).ToString("dd.MM.yyyy HH:mm"))
                            </span>
                            <span class="comment-renderer-time" tabindex="1">
                                @(rw["cm_status"].ToString())
                            </span>
                        </div>  
                        <div class="comment-renderer-text">
                            <div class="comment-renderer-text-content">
                                @(rw["cm_message"].ToString().Trim())
                            </div>    
                        </div>  
                    </div>
                </div>    
            </section>
           
        }
    }
    </div>
</body>
</html> 
